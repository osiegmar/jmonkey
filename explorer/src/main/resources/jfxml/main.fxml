<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.siegmar.jmonkey.explorer.controller.MainController">
  <MenuBar VBox.vgrow="NEVER" fx:id="menubar">
    <Menu mnemonicParsing="false" text="File">
      <MenuItem mnemonicParsing="false" onAction="#openGame" text="Open game…"/>
      <MenuItem mnemonicParsing="false" onAction="#openFile" text="Open file…"/>
      <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit"/>
    </Menu>
    <Menu mnemonicParsing="false" text="Help">
      <MenuItem mnemonicParsing="false" text="About" onAction="#about"/>
    </Menu>
  </MenuBar>
  <Pane VBox.vgrow="ALWAYS" fx:id="contentPane">
  </Pane>
</VBox>
